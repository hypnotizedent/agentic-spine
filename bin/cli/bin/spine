#!/usr/bin/env bash
set -euo pipefail

SPINE_ROOT="$(cd "$(dirname "$0")/../../.." && pwd)"

echo "spine CLI is deprecated in agentic-spine."
echo "Use the canonical entrypoint instead:"
echo "  ${SPINE_ROOT}/bin/ops"
echo
echo "Examples:"
echo "  ${SPINE_ROOT}/bin/ops preflight"
echo "  ${SPINE_ROOT}/bin/ops cap run spine.status"
echo "  ${SPINE_ROOT}/bin/ops loops list --open"
exit 64
