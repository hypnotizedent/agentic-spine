#!/usr/bin/env bash
set -euo pipefail

SPINE_REPO="${SPINE_REPO:-${SPINE_ROOT:-$HOME/code/agentic-spine}}"
SCOPES_DIR="$SPINE_REPO/mailroom/state/loop-scopes"

echo "=== LOOP SUMMARY ==="
echo ""

# Delegate to loops.sh summary which reads scope files
exec "$SPINE_REPO/ops/commands/loops.sh" summary
