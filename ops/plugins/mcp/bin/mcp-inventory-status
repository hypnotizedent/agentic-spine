#!/usr/bin/env bash
set -euo pipefail

# mcp.inventory.status â€” Validate workbench MCP inventory vs configs
# Safety: read-only (delegates to workbench validator)

WORKBENCH="${WORKBENCH:-$HOME/code/workbench}"
CHECK="$WORKBENCH/scripts/root/mcp/mcp-inventory-check.sh"

if [[ ! -x "$CHECK" ]]; then
  echo "STOP: missing or non-executable MCP inventory check: $CHECK" >&2
  exit 2
fi

exec "$CHECK"
