#!/usr/bin/env bash
set -euo pipefail

# network.home.dhcp.reservation.create â€” wrapper for unifi-home-agent.sh reservation-create
# Mutating: creates a DHCP reservation on the home UDR7.

SPINE_ROOT="${SPINE_ROOT:-$HOME/code/agentic-spine}"
AGENT="$SPINE_ROOT/ops/tools/unifi-home-agent.sh"

[[ -x "$AGENT" ]] || { echo "STOP (2): missing unifi-home-agent.sh"; exit 2; }

echo "network.home.dhcp.reservation.create"
echo

"$AGENT" reservation-create "$@"
