#!/usr/bin/env bash
set -euo pipefail

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
SPINE_ROOT="${SPINE_ROOT:-$(cd "$SCRIPT_DIR/../../../.." && pwd)}"
SCRIPT_NAME="$(basename "$0")"
PROJECT_ROOT="${NETWORK_PLUGIN_PROJECT_ROOT:-/Users/ronnyworks/code/workbench/docs/infrastructure/domains/network/spine-plugin-network/bin}"
PROJECT_SCRIPT="$PROJECT_ROOT/$SCRIPT_NAME"
LEGACY_SCRIPT="$SCRIPT_DIR/${SCRIPT_NAME}.legacy"

if [[ -x "$PROJECT_SCRIPT" ]]; then
  exec env SPINE_ROOT="$SPINE_ROOT" "$PROJECT_SCRIPT" "$@"
fi

echo "WARN: network plugin fallback active; delegated project command missing at $PROJECT_SCRIPT" >&2
exec "$LEGACY_SCRIPT" "$@"
