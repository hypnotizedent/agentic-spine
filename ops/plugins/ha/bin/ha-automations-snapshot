#!/usr/bin/env bash
set -euo pipefail

# ha.automations.snapshot — Snapshot HA automation states to ops/bindings/ha.automations.yaml
# Queries HA REST API for all automation.* entity states.
# Output: ops/bindings/ha.automations.yaml

SPINE_ROOT="${SPINE_ROOT:-$HOME/code/agentic-spine}"
OUTPUT="$SPINE_ROOT/ops/bindings/ha.automations.yaml"
INFISICAL_AGENT="${SPINE_ROOT}/ops/tools/infisical-agent.sh"
HA_BASE="http://100.67.120.1:8123"

TMPDIR_WORK=$(mktemp -d)
trap 'rm -rf "$TMPDIR_WORK"' EXIT

echo "ha.automations.snapshot"
echo

# ─────────────────────────────────────────────────────────────────────────────
# PRECONDITIONS
# ─────────────────────────────────────────────────────────────────────────────

command -v python3 >/dev/null 2>&1 || { echo "STOP (2): python3 not found"; exit 2; }
command -v curl >/dev/null 2>&1 || { echo "STOP (2): curl not found"; exit 2; }

# ─────────────────────────────────────────────────────────────────────────────
# RETRIEVE HA TOKEN
# ─────────────────────────────────────────────────────────────────────────────

if [[ ! -x "$INFISICAL_AGENT" ]]; then
  echo "STOP (2): infisical-agent.sh not found"
  exit 2
fi

HA_TOKEN=$("$INFISICAL_AGENT" get home-assistant prod HA_API_TOKEN 2>/dev/null) || true

if [[ -z "${HA_TOKEN:-}" ]]; then
  echo "STOP (2): could not retrieve HA_API_TOKEN from Infisical"
  exit 2
fi

# ─────────────────────────────────────────────────────────────────────────────
# QUERY HA API — all states, filter automation.*
# ─────────────────────────────────────────────────────────────────────────────

echo "Fetching all states..."
HTTP_CODE=$(curl -s -o "$TMPDIR_WORK/states.json" -w '%{http_code}' --connect-timeout 10 \
  -H "Authorization: Bearer $HA_TOKEN" "${HA_BASE}/api/states" 2>/dev/null) || HTTP_CODE="000"

if [[ "$HTTP_CODE" != "200" ]]; then
  echo "STOP (2): /api/states returned HTTP $HTTP_CODE"
  exit 2
fi

echo
echo "Building automation binding..."

# ─────────────────────────────────────────────────────────────────────────────
# BUILD YAML BINDING (Python)
# ─────────────────────────────────────────────────────────────────────────────

python3 - "$TMPDIR_WORK" "$OUTPUT" << 'PYEOF'
import json, sys, datetime, os

try:
    import yaml
except ImportError:
    print("STOP (2): PyYAML not installed", file=sys.stderr)
    sys.exit(2)

tmpdir, out_path = sys.argv[1], sys.argv[2]

# ── Load all states ──────────────────────────────────────────────────────────
with open(os.path.join(tmpdir, 'states.json'), 'r') as f:
    all_states = json.load(f)

# ── Filter automation entities ───────────────────────────────────────────────
automations = []
enabled_count = 0
disabled_count = 0

for entity in sorted(all_states, key=lambda e: e.get('entity_id', '')):
    eid = entity.get('entity_id', '')
    if not eid.startswith('automation.'):
        continue

    state = entity.get('state', '')
    attrs = entity.get('attributes', {})

    if state == 'on':
        enabled_count += 1
    else:
        disabled_count += 1

    automations.append({
        'entity_id': eid,
        'friendly_name': attrs.get('friendly_name', ''),
        'state': state,
        'last_triggered': attrs.get('last_triggered', None),
        'current': attrs.get('current', 'idle'),
    })

# ── Build output binding ─────────────────────────────────────────────────────
binding = {
    'schema_version': '1.0',
    'generated': datetime.datetime.now(datetime.timezone.utc).strftime('%Y-%m-%dT%H:%M:%SZ'),
    'source': 'ha.automations.snapshot',
    'summary': {
        'automation_count': len(automations),
        'enabled_count': enabled_count,
        'disabled_count': disabled_count,
    },
    'automations': automations,
}

header = '# HA Automation Snapshot (SSOT)\n'
header += '# Auto-generated by ha.automations.snapshot — do not hand-edit.\n'
header += '# Automation states extracted via HA REST API.\n'
header += '# Status: authoritative\n\n'

with open(out_path, 'w') as f:
    f.write(header)
    yaml.dump(binding, f, default_flow_style=False, sort_keys=False, allow_unicode=True, width=120)

# ── Summary ──────────────────────────────────────────────────────────────────
print(f"Wrote {out_path}")
print(f"  {len(automations)} automations")
print(f"  {enabled_count} enabled, {disabled_count} disabled")
PYEOF

echo
echo "sha256: $(shasum -a 256 "$OUTPUT" | cut -d' ' -f1)"
