#!/usr/bin/env bash
set -euo pipefail

# ha.integrations.snapshot — Snapshot HA config entries (integrations) to ops/bindings/ha.integrations.yaml
# Queries HA REST API for all config entry data.
# Output: ops/bindings/ha.integrations.yaml

SPINE_ROOT="${SPINE_ROOT:-$HOME/code/agentic-spine}"
OUTPUT="$SPINE_ROOT/ops/bindings/ha.integrations.yaml"
INFISICAL_AGENT="${SPINE_ROOT}/ops/tools/infisical-agent.sh"
HA_HOST="${HA_HOST:-10.0.0.100}"
HA_PORT="${HA_PORT:-8123}"
HA_BASE="http://${HA_HOST}:${HA_PORT}"

TMPDIR_WORK=$(mktemp -d)
trap 'rm -rf "$TMPDIR_WORK"' EXIT

echo "ha.integrations.snapshot"
echo

# ─────────────────────────────────────────────────────────────────────────────
# PRECONDITIONS
# ─────────────────────────────────────────────────────────────────────────────

command -v python3 >/dev/null 2>&1 || { echo "STOP (2): python3 not found"; exit 2; }
command -v curl >/dev/null 2>&1 || { echo "STOP (2): curl not found"; exit 2; }

# ─────────────────────────────────────────────────────────────────────────────
# RETRIEVE HA TOKEN
# ─────────────────────────────────────────────────────────────────────────────

if [[ ! -x "$INFISICAL_AGENT" ]]; then
  echo "STOP (2): infisical-agent.sh not found"
  exit 2
fi

HA_TOKEN=$("$INFISICAL_AGENT" get home-assistant prod HA_API_TOKEN 2>/dev/null) || true

if [[ -z "${HA_TOKEN:-}" ]]; then
  echo "STOP (2): could not retrieve HA_API_TOKEN from Infisical"
  exit 2
fi

# ─────────────────────────────────────────────────────────────────────────────
# QUERY HA API — config entries (integrations)
# ─────────────────────────────────────────────────────────────────────────────

echo "Fetching config entries..."
HTTP_CODE=$(curl -s -o "$TMPDIR_WORK/config_entries.json" -w '%{http_code}' --connect-timeout 10 \
  -H "Authorization: Bearer $HA_TOKEN" "${HA_BASE}/api/config/config_entries/entry" 2>/dev/null) || HTTP_CODE="000"

if [[ "$HTTP_CODE" != "200" ]]; then
  echo "STOP (2): /api/config/config_entries/entry returned HTTP $HTTP_CODE"
  exit 2
fi

echo
echo "Building integration binding..."

# ─────────────────────────────────────────────────────────────────────────────
# BUILD YAML BINDING (Python)
# ─────────────────────────────────────────────────────────────────────────────

python3 - "$TMPDIR_WORK" "$OUTPUT" << 'PYEOF'
import json, sys, datetime, os

try:
    import yaml
except ImportError:
    print("STOP (2): PyYAML not installed", file=sys.stderr)
    sys.exit(2)

tmpdir, out_path = sys.argv[1], sys.argv[2]

# ── Load config entries ──────────────────────────────────────────────────────
with open(os.path.join(tmpdir, 'config_entries.json'), 'r') as f:
    entries = json.load(f)

# ── Build integration list ───────────────────────────────────────────────────
integrations = []
domains = set()

for entry in sorted(entries, key=lambda e: e.get('domain', '')):
    domain = entry.get('domain', '')
    domains.add(domain)
    integrations.append({
        'entry_id': entry.get('entry_id', ''),
        'domain': domain,
        'title': entry.get('title', ''),
        'state': entry.get('state', ''),
        'source': entry.get('source', ''),
        'disabled_by': entry.get('disabled_by', None),
    })

# ── Build output binding ─────────────────────────────────────────────────────
binding = {
    'schema_version': '1.0',
    'generated': datetime.datetime.now(datetime.timezone.utc).strftime('%Y-%m-%dT%H:%M:%SZ'),
    'source': 'ha.integrations.snapshot',
    'summary': {
        'integration_count': len(integrations),
        'domain_count': len(domains),
    },
    'integrations': integrations,
}

header = '# HA Integration Snapshot (SSOT)\n'
header += '# Auto-generated by ha.integrations.snapshot — do not hand-edit.\n'
header += '# Config entries extracted via HA REST API.\n'
header += '# Status: authoritative\n\n'

with open(out_path, 'w') as f:
    f.write(header)
    yaml.dump(binding, f, default_flow_style=False, sort_keys=False, allow_unicode=True, width=120)

# ── Summary ──────────────────────────────────────────────────────────────────
print(f"Wrote {out_path}")
print(f"  {len(integrations)} integrations")
print(f"  {len(domains)} unique domains")
PYEOF

echo
echo "sha256: $(shasum -a 256 "$OUTPUT" | cut -d' ' -f1)"
