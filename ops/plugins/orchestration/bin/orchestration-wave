#!/usr/bin/env bash
# orchestration-wave - Wave orchestration capability wrapper
# Called by: ops cap run orchestration.wave.{start,dispatch,collect,status,close}
set -euo pipefail

SPINE_REPO="${SPINE_REPO:-$HOME/code/agentic-spine}"
ACTION="${1:-status}"
shift || true

exec "$SPINE_REPO/ops/commands/wave.sh" "$ACTION" "$@"
