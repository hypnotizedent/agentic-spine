{
    # HTTP only — Cloudflare tunnel handles public TLS.
    # Add ACME/TLS when direct Tailscale HTTPS is needed.
    auto_https off
}

# Authentik UI/API
http://{$AUTHENTIK_HOSTNAME} {
    reverse_proxy 127.0.0.1:9000
}

# Pi-hole admin (moved to 8053 to free port 80 for Caddy)
http://{$PIHOLE_HOSTNAME} {
    reverse_proxy 127.0.0.1:8053
}

